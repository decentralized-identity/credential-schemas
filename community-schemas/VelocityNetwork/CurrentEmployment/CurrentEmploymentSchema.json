{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/decentralized-identity/credential-schemas/main/community-schemas/VelocityNetwork/CurrentEmployment/CurrentEmploymentSchema.json",
    "title": "Current employment position",
    "description": "Schema for verifiable credentials representing current employment positions",
    "type": "object",
    "properties": {
        "credentialSubject": {
            "allOf": [
                {
                    "$ref": "#/definitions/Employment-base_Schema"
                },
                {
                    "type": "object",
                    "properties": {
                        "startDate": {
                            "$ref": "#/definitions/Date_Schema"
                        }
                    }
                }
            ]
        }
    },
    "required": [
        "credentialSubject"
    ],
    "definitions": {
        "Employment-base_Schema": {
            "title": "Employment-base",
            "type": "object",
            "x-internal": false,
            "properties": {
                "@context": {
                    "$ref": "#/definitions/Json-ld-context_Schema"
                },
                "type": {
                    "type": "string",
                    "default": "Employment"
                },
                "legalEmployer": {
                    "$ref": "#/definitions/Organization_Schema"
                },
                "role": {
                    "type": "string",
                    "description": "The role the person has in the organization.",
                    "maxLength": 256
                },
                "description": {
                    "type": "string",
                    "description": "A detailed description of the position.",
                    "maxLength": 2048
                },
                "employmentType": {
                    "type": "array",
                    "minItems": 1,
                    "description": "Any of: Full-time, full-time, Part-time, part-time, Contract, contract, Temporary, temporary, Permanent, permanent, Internship, internship, Other, other. ",
                    "items": {
                        "type": "string",
                        "enum": [
                            "Contract",
                            "Temporary",
                            "Permanent",
                            "Internship",
                            "Full-time",
                            "Part-time",
                            "Other",
                            "contract",
                            "temporary",
                            "permanent",
                            "internship",
                            "full-time",
                            "part-time",
                            "other"
                        ]
                    }
                },
                "place": {
                    "$ref": "#/definitions/Place_Schema"
                },
                "recipient": {
                    "$ref": "#/definitions/PersonName_Schema"
                },
                "alignment": {
                    "type": "array",
                    "description": "A public resource to which the employment position is aligned.",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/Alignment_Schema"
                    }
                }
            },
            "required": [
                "legalEmployer",
                "role",
                "recipient"
            ],
            "description": ""
        },
        "Json-ld-context_Schema": {
            "title": "json-ld-context",
            "oneOf": [
                {
                    "type": "string",
                    "maxLength": 2048
                },
                {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "maxLength": 2048
                    }
                }
            ],
            "description": "Simplified context for Velocity Publishers to Use",
            "examples": [
                {
                    "@context": "https://velocitynetwork.foundation/schemas/v1.1/layer1.jsonld.json"
                }
            ]
        },
        "Alignment_Schema": {
            "title": "Alignment",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "default": "AlignmentObject"
                },
                "targetName": {
                    "type": "string",
                    "description": "Name of the target alignment.",
                    "maxLength": 256
                },
                "targetUrl": {
                    "type": "string",
                    "format": "uri",
                    "description": "URL of the target alignment. ",
                    "maxLength": 2048
                },
                "targetDescription": {
                    "type": "string",
                    "description": "Detailed description of the target alignment. ",
                    "maxLength": 2048
                },
                "targetCode": {
                    "type": "string",
                    "description": "Code of the target alignment. ",
                    "maxLength": 256
                },
                "targetFramework": {
                    "type": "string",
                    "description": "The framework to target belongs. ",
                    "maxLength": 256
                }
            },
            "required": [
                "targetName",
                "targetUrl"
            ],
            "examples": [
                {
                    "type": "Alignment",
                    "targetName": "CCSS.ELA-Literacy.RST.11-12.3",
                    "targetUrl": "http://www.corestandards.org/ELA-Literacy/RST/11-12/3/",
                    "targetDescription": "A description of the ELA ltieracy certification",
                    "targetCode": "CCSS.ELA-Literacy.RST.11-12.3",
                    "targetFramework": "Mozilla 21st Century Skills"
                },
                {
                    "type": "Alignment",
                    "targetName": "Certified Nursing Assistant",
                    "targetUrl": "https://sandbox.credentialengine.org/finder/credential/8723/Certified_Nursing_Assistant",
                    "targetDescription": "Certified Nursing Assistant by the New Jersey Department of Health",
                    "targetCode": "ce-8570f9a5-e59e-48df-a7cd-00ffcc5fef56",
                    "targetFramework": "Credential Engine Credential Registry"
                }
            ]
        },
        "Date_Schema": {
            "title": "Calendar date",
            "type": "string",
            "pattern": "^[1,2]\\d\\d\\d(-(0[1-9]|1[0-2])(-(0[1-9]|[1-2]\\d|30|31))?)?$",
            "description": ""
        },
        "Did_Schema": {
            "title": "DID",
            "type": "string",
            "pattern": "^did:[a-z0-9]+:[A-Za-z0-9._:?=&%;-]+$"
        },
        "Organization_Schema": {
            "title": "Organization",
            "type": "object",
            "additionalProperties": false,
            "examples": [
                {
                    "type": "Organization",
                    "name": "New Jersey Motor Vehicle Commission",
                    "identifier": "did:velocity:0xc30b69405238038080c641cc20a63715ca97d706",
                    "place": {
                        "type": "Place",
                        "addressLocality": "Trenton",
                        "addressRegion": "US-NJ",
                        "addressCountry": "US"
                    }
                },
                {
                    "type": "Organization",
                    "name": "Microsoft Corporation",
                    "identifier": "did:velocity:0xc30b69405238038080c641cc20a63715ca97d706",
                    "place": {
                        "type": "Place",
                        "addressLocality": "Portland",
                        "addressRegion": "US-OR",
                        "addressCountry": "US",
                        "name": "Microsoft Experience Center"
                    }
                },
                {
                    "type": "Organization",
                    "name": "Harvard University",
                    "identifier": "did:velocity:0xc30b69405238038080c641cc20a63715ca97d706",
                    "place": {
                        "type": "Place",
                        "addressLocality": "Cambridge",
                        "addressRegion": "US-MA",
                        "addressCountry": "US"
                    }
                }
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "default": "Organization"
                },
                "name": {
                    "type": "string",
                    "description": "The name of the organization.",
                    "maxLength": 256
                },
                "identifier": {
                    "$ref": "#/definitions/Did_Schema"
                },
                "place": {
                    "$ref": "#/definitions/Place_Schema"
                },
                "image": {
                    "type": "string",
                    "maxLength": 2048,
                    "format": "uri",
                    "description": "IRI representing the logo of the organization. This must be JPG, PNG or SVG file. \nFor PNG or JPG: 300px x 300px minimum, maximum size 500kb. "
                }
            },
            "required": [
                "name",
                "place"
            ]
        },
        "PersonName_Schema": {
            "title": "Person name",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "default": "PersonName"
                },
                "givenName": {
                    "type": "string",
                    "description": "The given name or first name of the person.",
                    "maxLength": 64
                },
                "familyName": {
                    "type": "string",
                    "description": "The family name or surname of the person.",
                    "maxLength": 64
                },
                "middleName": {
                    "type": "string",
                    "description": "The middle name of the person.",
                    "maxLength": 256
                },
                "namePrefix": {
                    "type": "string",
                    "description": "A prefix to the name such as Dr or Sir.",
                    "maxLength": 8
                },
                "nameSuffix": {
                    "type": "string",
                    "description": "A suffix to the name such as Jr. or Sr.",
                    "maxLength": 16
                }
            },
            "required": [
                "givenName",
                "familyName"
            ],
            "examples": [
                {
                    "type": "PersonName",
                    "givenName": "Olivia",
                    "familyName": "Hafez",
                    "middleName": "Melanie",
                    "namePrefix": "Dr"
                },
                {
                    "type": "PersonName",
                    "givenName": "Oliver",
                    "familyName": "Barrett",
                    "nameSuffix": "Jr"
                },
                {
                    "type": "PersonName",
                    "givenName": "Joan Manuel",
                    "familyName": "Serrat"
                }
            ]
        },
        "Place_Schema": {
            "title": "Place",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "default": "Place"
                },
                "name": {
                    "type": "string",
                    "description": "The name of the place, e.g., building name, branch name, etc.",
                    "maxLength": 256
                },
                "addressLocality": {
                    "type": "string",
                    "description": "The locality where the place is, e.g., town or city name.",
                    "maxLength": 256
                },
                "addressRegion": {
                    "type": "string",
                    "pattern": "^[A-Z]{2}(-[A-Z0-9]{1,3})?$",
                    "description": "The region where the place is. These are states, provinces, etc. Must be an [ISO 3166-2 subdivision code](https://en.wikipedia.org/wiki/ISO_3166-2)",
                    "maxLength": 6
                },
                "addressCountry": {
                    "type": "string",
                    "description": "The country where the place is. Must be an [ISO 3166 2 letter country code](https://en.wikipedia.org/wiki/List_of_ISO_3166_country_codes)",
                    "pattern": "^[A-Z]{2}$",
                    "maxLength": 2
                }
            },
            "required": [
                "addressCountry"
            ],
            "examples": [
                {
                    "type": "Place",
                    "name": "Lincoln Square",
                    "addressLocality": "Buffalo",
                    "addressRegion": "US-NY",
                    "addressCountry": "US"
                },
                {
                    "type": "Place",
                    "addressLocality": "Cerdanyola del Vallès",
                    "addressRegion": "ES-CT",
                    "addressCountry": "ES"
                },
                {
                    "type": "Place",
                    "addressLocality": "Long Valley",
                    "addressRegion": "US-NJ",
                    "addressCountry": "US"
                },
                {
                    "type": "Place",
                    "name": "Microsoft Visitor Center",
                    "addressLocality": "Redmond",
                    "addressRegion": "US-WA",
                    "addressCountry": "US"
                }
            ]
        }
    },
    "examples": [
        {
            "credentialSubject": {
                "@context": [
                    "https://lib.velocitynetwork.foundation/layer1-context-v1.1.json"
                ],
                "type": "Employment",
                "legalEmployer": {
                    "type": "Organization",
                    "name": "Ocatgon Bank",
                    "identifier": "did:velocity:0xc257274276a4e539741ca11b590b9447b26a8051",
                    "place": {
                        "type": "Place",
                        "addressLocality": "London",
                        "addressRegion": "GB-ENG",
                        "addressCountry": "GB"
                    }
                },
                "role": "Accountant",
                "description": "Junior accountant in the mortgage department",
                "employmentType": [
                    "internship",
                    "contract"
                ],
                "place": {
                    "type": "Place",
                    "name": "Branch 4644",
                    "addressLocality": "Birmingham",
                    "addressRegion": "GB-ENG",
                    "addressCountry": "GB"
                },
                "startDate": "2017-01",
                "recipient": {
                    "type": "PersonName",
                    "givenName": "Olivia",
                    "familyName": "Hafez"
                }
            }
        },
        {
            "credentialSubject": {
                "@context": [
                    "https://lib.velocitynetwork.foundation/layer1-context-v1.1.json"
                ],
                "type": "Employment",
                "legalEmployer": {
                    "type": "Organization",
                    "name": "Microsoft Corporation",
                    "identifier": "did:velocity:0xc257274276a4e539741ca11b590b9447b26a8051",
                    "place": {
                        "type": "Place",
                        "addressLocality": "Bellevue",
                        "addressRegion": "US-WA",
                        "addressCountry": "US"
                    }
                },
                "role": "Project Manager",
                "description": "Backend development project management",
                "employmentType": [
                    "full-time",
                    "permanent"
                ],
                "place": {
                    "type": "Place",
                    "name": "Media Lab",
                    "addressLocality": "Buffalo",
                    "addressRegion": "US-NY",
                    "addressCountry": "US"
                },
                "startDate": "2013-10",
                "recipient": {
                    "type": "PersonName",
                    "givenName": "Olivia",
                    "familyName": "Hafez"
                }
            }
        }
    ]
}
