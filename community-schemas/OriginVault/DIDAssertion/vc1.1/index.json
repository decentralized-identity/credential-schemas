{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://schemas.originvault.box/DIDAssertionCredentialV1_1.schema.json",
  "title": "DID Assertion Credential",
  "version": "1.1",
  "type": "object",
  "properties": {
    "@context": {
      "type": "array",
      "items": { "type": "string" },
      "default": [
        "https://www.w3.org/2018/credentials/v1",
        "https://schemas.originvault.box/context/did-assertion-v1.json"
      ]
    },
    "id": { "type": "string", "format": "uri" },
    "type": {
      "type": "array",
      "items": { "type": "string" },
      "contains": { "const": "VerifiableCredential" }
    },
    "issuer": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" }
      },
      "required": ["id"]
    },
    "issuanceDate": { "type": "string", "format": "date-time" },
    "expirationDate": { "type": "string", "format": "date-time" },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "claimReviewed": { "type": "string" },
        "author": { "type": "string", "format": "uri" },
        "claimInterpreter": { "type": "string" },
        "reviewAspect": { "type": "string" },
        "firstAppearance": { "type": "string", "format": "date-time" },
        "appearance": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": { "type": "string", "format": "date-time" },
              "reviewStatus": {
                "type": "string",
                "enum": ["Verified", "Disputed", "Revoked"]
              }
            }
          }
        }
      }
    }
  },
  "required": ["@context", "id", "type", "issuer", "issuanceDate", "credentialSubject", "expirationDate"]
}
